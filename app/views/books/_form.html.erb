<%= form_for(@book, html: {class: "form-horizontal"}) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :isbn %><br>
    <div class="col-md-3">
      <%= f.text_field :isbn, :maxlength=>13, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title %><br>
    <div class="col-md-3">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <div class="col-md-3">
      <%= f.number_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :publish_id %><br>
    <div class="col-md-3">
      <%= f.collection_select :publish_id, Publish.all, :id, :publishname, {}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published %><br>
    <%= f.date_select :published %>
  </div>
  <div class="form-group">
    <%= f.label :cd %><br>
    <div class="col-md-2">
      <%= f.check_box :cd, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "登録", class: "btn btn-success" %>
  </div>
<% end %>

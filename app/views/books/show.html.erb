<p id="notice"><%= notice %></p>

<p>
  <strong>Isbn:</strong>
  <%= @book.isbn %>
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>

<p>
  <strong>Publish:</strong>
  <%= @book.publish.publishname %>
</p>

<p>
  <strong>Published:</strong>
  <%= @book.published %>
</p>

<p>
  <strong>Cd:</strong>
  <%= @book.cd %>
</p>

<h2>評判</h2>
<ul>
<% @book.reviews.each do |review| %>
  <li><%= review.body %>（<%= review.user.username %>）</li>
<% end %>
</ul>

<%= link_to '更新', edit_book_path(@book), class: "btn btn-success" %> |
<%= link_to '戻る', books_path, class: "btn btn-default" %>
